@using Project_2.Infrastructure
@model Project_2.Models.ViewModels.GithubProjects.GithubProjectModel

<div class="github-project-box">
    <div class="github-project-content">
        <span class="github-project-title">@Model.Title.ToUpper()</span>
        <span class="github-project-subtitle">@Model.Description.ToUpper()</span>
        <img class="github-project-image" src="@Model.ImageURL" alt="project image">
        <span class="project-skills">
            <div style="display: flex; gap: 12px">
                @foreach (var skill in Model.Skills.Where(skill => Parameters.Icons.ContainsKey(skill.ToUpper())))
                {
                    <div class="skill">
                        @Html.Raw(Parameters.Icons[skill.ToUpper()])
                    </div>
                }
            </div>
            <span class="project-links">
                <a href="@Model.ProjectURL"><img class="social-icon" src="images/icons/github.svg" alt=""></a>
                @if (@Model.LiveDemoURL != null && @Model.LiveDemoURL.ToString() != "")
                {
                    <a href="@Model.LiveDemoURL"><img class="social-icon" src="images/icons/open-in-new-tab.svg" alt=""></a>
                }
            </span>
        </span>
    </div>
</div>
